{
  "compilerOptions": {
    "paths": {
      "@common/*": ["src/modules/common/*"],
      "@book/*": ["src/modules/book/*"],
      "@movie/*": ["src/modules/movie/*"]
    },
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true
  }
}
